# === API Providers ===
TRANSCRIPTION_PROVIDER=openai
ANALYSIS_PROVIDER=openai

# === OpenAI ===
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4o
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_BASE_URL=https://api.openai.com/v1

# === DashScope (Alibaba Cloud) ===
DASHSCOPE_API_KEY=
DASHSCOPE_SPEECH_MODEL=paraformer-v2
DASHSCOPE_TEXT_MODEL=qwen-turbo

# === Database ===
DATABASE_PATH=./data/podcast-digest.db

# === Storage ===
SUMMARIES_DIR=./summaries
TEMP_DIR=./tmp

# === Scheduler ===
# Cron: 每天北京时间凌晨2点自动刷新并处理所有播客
SCHEDULER_CRON=0 2 * * *
SCHEDULER_TIMEZONE=Asia/Shanghai
SCHEDULER_ENABLED=true

# === Processing ===
MAX_CONCURRENT_FEEDS=5
UPDATE_WINDOW_HOURS=24
MAX_RETRY_ATTEMPTS=3
AUDIO_DOWNLOAD_TIMEOUT=300000
AUDIO_MAX_CHUNK_SIZE_MB=25

# === Server ===
API_PORT=3000
API_HOST=0.0.0.0

# === Logging ===
LOG_LEVEL=info
LOG_FILE=./logs/podcast-digest.log

# === Content Analysis ===
SUMMARY_MIN_LENGTH=1000
SUMMARY_MAX_LENGTH=2000
KEY_POINTS_COUNT=8
ANALYSIS_LANGUAGE=zh-CN

# === PDF Export ===
PDF_EXPORT_ENABLED=true

# === Email Digest ===
EMAIL_ENABLED=true
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=465
EMAIL_SMTP_SECURE=true
EMAIL_SMTP_USER=your-email@gmail.com
EMAIL_SMTP_PASS=your-gmail-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_TO=your-email@gmail.com
# Cron: 每天北京时间早上8点
EMAIL_SCHEDULE_CRON=0 8 * * *
EMAIL_SCHEDULE_TIMEZONE=Asia/Shanghai
